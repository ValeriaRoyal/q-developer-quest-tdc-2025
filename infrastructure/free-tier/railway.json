{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NEXTAUTH_URL": "${{RAILWAY_STATIC_URL}}",
        "DATABASE_URL": "${{DATABASE_URL}}"
      }
    }
  },
  "plugins": [
    {
      "type": "postgresql",
      "name": "postgres"
    }
  ]
}
