{
  "mcpVersion": "2024-11-05",
  "name": "hot-wheels-verified-mcp",
  "description": "APENAS servidores MCP reais e verificados - sem hardcode",
  "version": "1.0.0",
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/media/val/Novo volume/catalogo-hotwheels"],
      "env": {
        "NODE_ENV": "development"
      },
      "description": "✅ REAL - @modelcontextprotocol/server-filesystem@2025.8.21"
    },
    "eslint": {
      "command": "npx",
      "args": ["@eslint/mcp@latest"],
      "env": {},
      "description": "✅ REAL - @eslint/mcp@0.1.1 (oficial ESLint Foundation)"
    },
    "aws-pricing": {
      "command": "python",
      "args": ["-m", "awslabs.aws_pricing_mcp_server"],
      "env": {
        "AWS_REGION": "us-east-1"
      },
      "description": "✅ REAL - awslabs/mcp oficial GitHub"
    }
  },
  "tools": [
    {
      "name": "read_file",
      "description": "Ler arquivos do projeto",
      "server": "filesystem"
    },
    {
      "name": "write_file", 
      "description": "Escrever arquivos",
      "server": "filesystem"
    },
    {
      "name": "list_files",
      "description": "Listar arquivos",
      "server": "filesystem"
    },
    {
      "name": "lint_file",
      "description": "Lint arquivo com ESLint real",
      "server": "eslint"
    },
    {
      "name": "fix_file",
      "description": "Fix ESLint issues automaticamente",
      "server": "eslint"
    },
    {
      "name": "get_pricing",
      "description": "Obter preços AWS reais",
      "server": "aws-pricing"
    }
  ],
  "verification": {
    "filesystem": "✅ NPM verified - @modelcontextprotocol/server-filesystem@2025.8.21",
    "eslint": "✅ NPM verified - @eslint/mcp@0.1.1 (ESLint Foundation)",
    "aws": "✅ GitHub verified - awslabs/mcp",
    "hardcode_removed": true,
    "fictional_removed": true
  },
  "installation": {
    "filesystem": "npm install -g @modelcontextprotocol/server-filesystem",
    "eslint": "npm install -g @eslint/mcp",
    "aws": "git clone https://github.com/awslabs/mcp.git"
  },
  "ide_configs": {
    "vscode": ".vscode/mcp.json",
    "cursor": ".cursor/mcp.json",
    "windsurf": "~/.codeium/windsurf/mcp_config.json"
  }
}
